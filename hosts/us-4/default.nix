{ hostName, ... }:

let
  keys = import ../../secrets/keys.nix;
in
{
  imports = [
    ../_profiles/dmit
  ];

  # ============================================================================
  # Networking
  # ============================================================================
  networking = {
    inherit hostName;
    useDHCP = true;
  };

  # ============================================================================
  # Access (SSH)
  # ============================================================================
  hakula.access.ssh.authorizedKeys = [ keys.users.hakula-dmit ];

  # ============================================================================
  # Distributed Builds
  # ============================================================================
  hakula.builders.enable = true;

  # ============================================================================
  # Services
  # ============================================================================
  hakula.services.openssh = {
    enable = true;
    ports = [ 35060 ];
  };

  # ============================================================================
  # System State
  # ============================================================================
  system.stateVersion = "25.11";
}
